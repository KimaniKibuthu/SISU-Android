<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/ten"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <kimani.com.sisu.widgets.FontTextView
            android:layout_width="wrap_content"
            android:id="@+id/number"
            android:layout_marginRight="@dimen/five"
            android:textColor="@color/primary_text"
            app:font_face="@string/bold_font"
            android:layout_height="wrap_content" />

        <kimani.com.sisu.widgets.FontTextView
            android:layout_width="match_parent"
            android:id="@+id/question"
            android:textColor="@color/primary_text"
            app:font_face="@string/regular_font"
            android:layout_toRightOf="@+id/number"
            android:layout_height="wrap_content" />

        <kimani.com.sisu.widgets.FontTextView
            android:layout_width="match_parent"
            android:id="@+id/answer"
            android:layout_marginTop="@dimen/five"
            app:font_face="@string/bold_font"
            android:textColor="@color/secondary_text"
            android:layout_below="@+id/question"
            android:layout_height="wrap_content" />

        <kimani.com.sisu.widgets.FontTextView
            android:layout_width="wrap_content"
            android:id="@+id/mitigation_label"
            android:text="Mitigation: "
            android:layout_below="@+id/answer"
            android:textColor="@color/primary_text"
            android:layout_marginTop="@dimen/five"
            app:font_face="@string/bold_font"
            android:layout_height="wrap_content" />

        <kimani.com.sisu.widgets.FontTextView
            android:layout_width="match_parent"
            android:id="@+id/mitigation"
            android:layout_marginTop="@dimen/five"
            android:textColor="@color/primary_text"
            app:font_face="@string/regular_font"
            android:layout_toRightOf="@+id/mitigation_label"
            android:layout_below="@+id/answer"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/five"
        android:background="@color/divider"
        android:layout_height="1dp" />
</LinearLayout>